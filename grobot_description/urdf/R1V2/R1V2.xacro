<?xml version="1.0" ?>
<robot name="R1V2" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find grobot_description)/urdf/materials.xacro" />
<!-- <xacro:include filename="$(find grobot_description)/urdf/R1V2.trans" /> -->
<xacro:include filename="$(find grobot_description)/urdf/R1V2.gazebo" />
<xacro:property name="body_color" value="Gazebo/Grey" />

<!-- BASE FOOTPRINT -->

<link name="base_footprint"/>

<joint name="base_joint" type="fixed">
  <parent link="base_footprint"/>
  <child link="base_link"/>
  <origin xyz="0 0.0 0.0" rpy="0 0 0.0"/>
</joint>


<!-- BASE LINK -->

<link name="base_link">
  <inertial>
    <origin xyz="0.05138243521214412 0.0078069568685534855 0.13585488386600772" rpy="0 0 0"/>
    <mass value="42.91649907737053"/>
    <inertia ixx="1.351409" iyy="1.746641" izz="2.789993" ixy="0.00206" iyz="-0.000637" ixz="-0.035187"/>
  </inertial>

  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find grobot_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>

  <collision>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find grobot_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>

</link>

<!-- RIGHT WHEEL -->

<joint name="wheel_right_joint" type="continuous">
  <origin xyz="0.19013 -0.260644 0.100803" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="wheel_right_link"/>
  <axis xyz="0.0 1.0 0.0"/>
</joint>

<link name="wheel_right_link">
  <inertial>
    <origin xyz="-6.635167877216963e-06 -0.03788510222333019 2.6177456940168486e-06" rpy="0 0 0"/>
    <mass value="1.308460957006261"/>
    <inertia ixx="0.004145" iyy="0.007602" izz="0.004144" ixy="0.0" iyz="0.0" ixz="-0.0"/>
  </inertial>

  <visual>
    <origin xyz="-0.19013 0.260644 -0.100803" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find grobot_description)/meshes/right_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>

  <collision>
    <origin xyz="-0.19013 0.260644 -0.100803" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find grobot_description)/meshes/right_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>

</link>


<!-- LEFT WHEEL -->

<joint name="wheel_left_joint" type="continuous">
  <origin xyz="0.190619 0.2724 0.100803" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="wheel_left_link"/>
  <axis xyz="0.0 1.0 -0.0"/>
</joint>

<link name="wheel_left_link">
  <inertial>
    <origin xyz="6.35960602515806e-06 0.03788468935132683 2.6476887081960943e-06" rpy="0 0 0"/>
    <mass value="1.3084599960030907"/>
    <inertia ixx="0.004145" iyy="0.007602" izz="0.004144" ixy="0.0" iyz="-0.0" ixz="0.0"/>
  </inertial>

  <visual>
    <origin xyz="-0.190619 -0.2724 -0.100803" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find grobot_description)/meshes/left_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="silver"/>
  </visual>

  <collision>
    <origin xyz="-0.190619 -0.2724 -0.100803" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find grobot_description)/meshes/left_wheel_1.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>

</link>


<!-- LIDAR RIGHT-->

<joint name="lidar_joint" type="fixed">
  <origin xyz="0.37 -0.265 0.26" rpy="0 0 2.35619"/>
  <parent link="base_link"/>
  <child link="base_scan"/>
  <axis xyz="0.0 0.0 1.0"/>
</joint>

<link name="base_scan">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <mass value="0.114"/>
    <inertia ixx="0.001" iyy="0.000000" izz="0.000000" ixy="0.001" iyz="0.000000" ixz="0.001"/>
  </inertial>

  <collision>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.0315" radius="0.055"/>
    </geometry>
  </collision>

  <visual>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.0315" radius="0.055"/>
    </geometry>
  </visual>
  
</link>

<!-- LIDAR LEFT-->

<joint name="lidar_joint2" type="fixed">
  <origin xyz="0.37 0.265 0.34" rpy="0 0 3.92699"/>
  <parent link="base_link"/>
  <child link="base_scan2"/>
  <axis xyz="0.0 0.0 1.0"/>
</joint>

<link name="base_scan2">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <mass value="0.114"/>
    <inertia ixx="0.001" iyy="0.000000" izz="0.000000" ixy="0.001" iyz="0.000000" ixz="0.001"/>
  </inertial>

  <collision>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.0315" radius="0.055"/>
    </geometry>
  </collision>

  <visual>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.0315" radius="0.055"/>
    </geometry>
  </visual>
</link>

<joint name="merged_lidar_joint" type="fixed">
  <origin xyz="0.0 0.0 0.45" rpy="0 0 3.14159"/>
  <parent link="base_link"/>
  <child link="merged_base_scan"/>
  <axis xyz="0.0 0.0 1.0"/>
</joint>

<link name="merged_base_scan">
  <inertial>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <mass value="0.114"/>
    <inertia ixx="0.001" iyy="0.000000" izz="0.000000" ixy="0.001" iyz="0.000000" ixz="0.001"/>
  </inertial>

  <!-- <collision>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.0315" radius="0.055"/>
    </geometry>
  </collision> -->

  <visual>
    <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.0315" radius="0.055"/>
    </geometry>
  </visual>
</link>

<gazebo reference="base_scan">
        <sensor name="laser" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>16</max>
                </range>
                <noise>
                  <type>gaussian</type>
                  <mean>0.0</mean>
                  <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="scan" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <namespace>/LIDAR1</namespace>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>base_scan</frame_name>
            </plugin>
        </sensor>
</gazebo>

<gazebo reference="base_scan2">
        <sensor name="laser2" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>16</max>
                </range>
                <noise>
                  <type>gaussian</type>
                  <mean>0.0</mean>
                  <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="scan2" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <namespace>/LIDAR2</namespace>
                    <argument>~/out:=scan</argument>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>base_scan2</frame_name>
            </plugin>
        </sensor>
</gazebo>

<!-- IMU -->

<joint name="imu_joint" type="fixed">
  <origin xyz="0.35 0.0 0.2" rpy="0 0 0"/>
  <parent link="base_link"/>
  <child link="imu_link"/>
  <axis xyz="0.0 0.0 1.0"/>
</joint>


<link name="imu_link"/>
 <gazebo reference="imu_link">
  <sensor name="imu_sensor" type="imu">
   <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
      <ros>
        <remapping>~/out:=imu</remapping>
      </ros>
      <initial_orientation_as_reference>false</initial_orientation_as_reference>
    </plugin>
    <always_on>true</always_on>
    <update_rate>100</update_rate>
    <visualize>true</visualize>
    <imu>
      <angular_velocity>
        <x>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>2e-4</stddev>
            <bias_mean>0.0000075</bias_mean>
            <bias_stddev>0.0000008</bias_stddev>
          </noise>
        </x>
        <y>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>2e-4</stddev>
            <bias_mean>0.0000075</bias_mean>
            <bias_stddev>0.0000008</bias_stddev>
          </noise>
        </y>
        <z>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>2e-4</stddev>
            <bias_mean>0.0000075</bias_mean>
            <bias_stddev>0.0000008</bias_stddev>
          </noise>
        </z>
      </angular_velocity>
      <linear_acceleration>
        <x>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>1.7e-2</stddev>
            <bias_mean>0.1</bias_mean>
            <bias_stddev>0.001</bias_stddev>
          </noise>
        </x>
        <y>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>1.7e-2</stddev>
            <bias_mean>0.1</bias_mean>
            <bias_stddev>0.001</bias_stddev>
          </noise>
        </y>
        <z>
          <noise type="gaussian">
            <mean>0.0</mean>
            <stddev>1.7e-2</stddev>
            <bias_mean>0.1</bias_mean>
            <bias_stddev>0.001</bias_stddev>
          </noise>
        </z>
      </linear_acceleration>
    </imu>
  </sensor>
</gazebo>

<!-- CONTROLLER -->

<gazebo>
  <plugin name="velocity_controller" filename="libgazebo_ros_diff_drive.so">
    <update_rate>30</update_rate>

    <!-- Wheel Information -->
    <left_joint>wheel_left_joint</left_joint>
    <right_joint>wheel_right_joint</right_joint>
    <wheel_separation>0.650</wheel_separation>
    <wheel_diameter>0.22</wheel_diameter>

    <!-- Limits -->
    <max_wheel_torque>100</max_wheel_torque>
    <max_wheel_acceleration>1.0</max_wheel_acceleration>

    <!-- Output -->
    <command_topic>cmd_vel</command_topic>
    <odometry_topic>odom</odometry_topic>
    <odometry_frame>odom</odometry_frame>
    <robot_base_frame>base_footprint</robot_base_frame>

    <publish_odom>true</publish_odom>
    <publish_odom_tf>true</publish_odom_tf>
    <publish_wheel_tf>true</publish_wheel_tf>

  </plugin>
</gazebo>

<!-- JOINT STATE -->

<gazebo>
  <plugin name="grobot_joint_state" filename="libgazebo_ros_joint_state_publisher.so">
    <ros>
      <remapping>~/out:=joint_states</remapping>
    </ros>
    <update_rate>30</update_rate>
    <joint_name>wheel_left_joint</joint_name>
    <joint_name>wheel_right_joint</joint_name>
  </plugin>
</gazebo>
</robot>